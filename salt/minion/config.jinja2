master: {{ pillar['salt']['hostname'] }}

log_level_logfile: debug

backup_mode: minion

startup_states: sls
sls_list:
  - vim

ca.cert_base_path: '/etc/pki'

providers:
  pkg: brew
  service: launchctl

mysql.host: 'localhost'
mysql.port: 3306
mysql.user: 'root'
mysql.pass: ''
mysql.db: 'mysql'
mysql.unix_socket: '/tmp/mysql.sock'
mysql.charset: 'utf8'
